<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/word_pair_background"
    android:layout_marginBottom="8dp">

    <!-- Word Pair Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <!-- Input Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:hintEnabled="false"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextWord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint = "Enter word"
                android:maxLines="1"
                android:background="@drawable/text_field_background"
                android:textColor="@color/black"
                android:textColorHint="@color/inactive"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Button Column -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Translate Button -->
            <ImageButton
                android:id="@+id/buttonTranslate"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_right_arrow_circle"
                android:background="@android:color/transparent"
                android:contentDescription="Translate"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:layout_marginBottom="4dp" />

            <!-- Delete Button (returned to column) -->
            <ImageButton
                android:id="@+id/buttonDelete"
                android:layout_width="43dp"
                android:layout_height="45dp"
                android:background="@android:color/holo_orange_light"
                android:contentDescription="Delete word pair"
                android:scaleType="centerInside"
                android:src="@drawable/ic_close" />

        </LinearLayout>

        <!-- Translation Display -->
        <TextView
            android:id="@+id/textViewTranslation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:padding="16dp"
            android:background="@drawable/translation_background"
            android:text="Translation will appear here"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:minHeight="56dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground" />

        

    </LinearLayout>

    <!-- Add Button -->
    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="+"
        android:textSize="24sp"
        android:textStyle="bold"
        android:minWidth="96dp"
        android:minHeight="48dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:backgroundTint="#47BA5A"
        android:textColor="@color/white" />

</LinearLayout>
